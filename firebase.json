{
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "rewrites": [{ "source": "**", "destination": "/index.html" }],
    "headers": [
      { "source": "/assets/**", "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ] },
      { "source": "/index.html", "headers": [ { "key": "Cache-Control", "value": "no-store" } ] }
    ]
  }
}
